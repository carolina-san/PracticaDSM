@model Interfaz.Models.LoginUsuarioViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Bienvenidos a UrbanStep</h1>

<h4>Por favor, identifícate</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" class="formulario-envio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-primary btn-sm" />
            </div>
        </form>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
        
            <div><p>¿No tienes cuenta? <a href="@Url.Action("Registro", "Usuario")">Regístrate aquí</a></p></div>
        </main>

    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
