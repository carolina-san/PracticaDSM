@model IEnumerable<Interfaz.Models.ArticuloViewModel>

@{
    ViewData["Title"] = "Artículos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4">Artículos</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Crear Nuevo</a>
</p>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card shadow-sm h-100">
                <div class="card-img-top text-center">
                    @if (!string.IsNullOrEmpty(item.Imagen))
                    {
                        <img src="@item.Imagen" alt="@item.Descripcion" class="img-fluid" style="max-height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <span>Sin imagen</span>
                    }
                </div>
                <div class="card-body">
                    <h5 class="card-title">@item.Descripcion</h5>
                    <p class="card-text">
                        <strong>Precio:</strong> @item.Precio.ToString("C")<br>
                        <strong>Stock:</strong> @item.Stock
                    </p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-sm" })
                    @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    @Html.ActionLink("Borrar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </div>
            </div>
        </div>
    }
</div>
